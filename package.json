{
  "name": "staart",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:AnandChowdhary/staart.git",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "scripts": {
    "build": "touch .env && mkdir -p dist && cp .env dist/.env && tsc",
    "start": "concurrently 'yarn watch-build' 'yarn watch-prettier' 'yarn watch-server'",
    "watch-build": "onchange '{src,examples}/**/*.ts' -- yarn build",
    "watch-prettier": "onchange '{src,examples}/**/*.{ts,json}' -- prettier --write {{changed}}",
    "watch-server": "nodemon dist/index.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/marked": "^0.6.5",
    "@types/mysql": "^2.15.5",
    "@types/node": "^11.13.6",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "onchange": "^5.2.0",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.4"
  },
  "dependencies": {
    "@types/mustache": "^0.8.32",
    "bcrypt": "^3.0.6",
    "fs-extra": "^7.0.1",
    "jsonwebtoken": "^8.5.1",
    "marked": "^0.6.2",
    "mustache": "^3.0.1",
    "mysql": "^2.17.1",
    "node-ses": "^2.2.0",
    "reflect-metadata": "^0.1.13"
  }
}
